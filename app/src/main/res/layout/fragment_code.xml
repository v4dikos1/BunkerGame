<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CodeFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_button_2"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_thirty"
        android:layout_marginTop="@dimen/margin_twenty"
        android:fontFamily="@font/gilroy_semi_bold"
        android:text="@string/back_button"
        android:textAllCaps="false"
        android:textColor="@color/greeting_text_color"
        android:textSize="@dimen/text_fourteen"
        app:icon="@drawable/ic_arrow_back"
        app:iconTint="@color/greeting_text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/black" />

    <TextView
        android:id="@+id/enter_code_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_twenty_four"
        android:fontFamily="@font/gilroy_regular"
        android:text="@string/enter_code_text"
        android:textColor="@color/greeting_text_color"
        android:textSize="@dimen/text_sixteen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button_2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/code_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_twenty_four"
        android:layout_marginTop="@dimen/margin_one_hundred"
        android:layout_marginEnd="@dimen/margin_twenty_four"
        android:hint="@string/enter_code"
        android:textColorHint="@color/black"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/enter_code_text">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/connect_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_twenty_four"
        android:layout_marginTop="@dimen/margin_thirty_two"
        android:layout_marginEnd="@dimen/margin_twenty_four"
        android:background="@drawable/gradient"
        android:fontFamily="@font/gilroy_semi_bold"
        android:text="@string/connect"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_fourteen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/code_field" />

</androidx.constraintlayout.widget.ConstraintLayout>