<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        tools:context=".fragments.GameFragment">


        <View
            android:id="@+id/start_game_field"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="@dimen/margin_twenty_four"
            android:layout_marginEnd="@dimen/margin_twenty_four"
            android:background="@drawable/ic_create_game_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/create_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_twenty_four"
            android:fontFamily="@font/gilroy_semi_bold"
            android:text="@string/create_game_id"
            android:textColor="@color/white"
            android:textSize="@dimen/text_twenty"
            app:layout_constraintStart_toStartOf="@id/start_game_field"
            app:layout_constraintTop_toTopOf="@id/start_game_field" />

        <TextView
            android:id="@+id/choose_settings_text"
            android:layout_width="@dimen/choose_settings_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_twenty_four"
            android:layout_marginTop="@dimen/margin_twenty_four"
            android:layout_marginEnd="@dimen/margin_twenty_four"
            android:layout_marginBottom="@dimen/margin_twenty_four"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/choose_settings"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sixteen"
            app:layout_constraintStart_toStartOf="@id/start_game_field"
            app:layout_constraintTop_toBottomOf="@id/create_game" />

        <ImageButton
            android:id="@+id/new_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_twenty_four"
            android:layout_marginBottom="@dimen/margin_twenty_four"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/start_game_field"
            app:layout_constraintStart_toStartOf="@id/start_game_field"
            app:srcCompat="@drawable/ic_new_game" />


        <View
            android:id="@+id/enter_game_field"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="@dimen/margin_twenty_four"
            android:layout_marginTop="@dimen/margin_forty_two"
            android:layout_marginEnd="@dimen/margin_twenty_four"
            android:background="@drawable/ic_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/start_game_field" />

        <ImageButton
            android:id="@+id/enter_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_twenty_four"
            android:layout_marginBottom="@dimen/margin_twenty_four"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/enter_game_field"
            app:layout_constraintStart_toStartOf="@id/enter_game_field"
            app:srcCompat="@drawable/ic_login_btn" />

        <TextView
            android:id="@+id/enter_game_text"
            android:layout_width="@dimen/choose_settings_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_twenty_four"
            android:layout_marginTop="@dimen/margin_twenty_four"
            android:layout_marginEnd="@dimen/margin_twenty_four"
            android:layout_marginBottom="@dimen/margin_twenty_four"
            android:fontFamily="@font/gilroy_regular"
            android:text="@string/connect_to_game_text"
            android:textColor="@color/white"
            android:textSize="@dimen/text_sixteen"
            app:layout_constraintStart_toStartOf="@id/enter_game_field"
            app:layout_constraintTop_toBottomOf="@id/connect" />

        <TextView
            android:id="@+id/connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_twenty_four"
            android:fontFamily="@font/gilroy_semi_bold"
            android:text="@string/connect"
            android:textColor="@color/white"
            android:textSize="@dimen/text_twenty"
            app:layout_constraintStart_toStartOf="@id/enter_game_field"
            app:layout_constraintTop_toTopOf="@id/enter_game_field" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>